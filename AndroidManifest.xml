<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.jromeijn.imp06.pong"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/Pong">
        <activity
            android:name=".Activity.Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.Info"
            android:label="@string/InfoTitle" 
            android:theme="@style/Pong.Dialog" />
        <activity
            android:name=".Activity.Settings"
            android:label="@string/PreferencesTitle" />
        <activity
            android:name=".Activity.Pong"
            android:label="@string/InfoTitle" 
            android:theme="@style/Pong.Playfield"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activity.Statistics"
            android:label="@string/StatisticsTitle"            
            android:theme="@style/Pong.Dialog" />
	</application>    
    
</manifest>